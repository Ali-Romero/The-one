.header
  position relative
  z-index 22

  &__inner
    display: flex
    justify-content: space-between
    align-items: center
    padding: 18px 0
    +above($breakpoints.md)
      padding: 20px 0
    +above($breakpoints.xxl)
      padding: 30px 0

  &__container
    display: flex
    align-items: center
    gap: 20px
    +above($breakpoints.xxl)
      gap: 30px

  &__logo
    img
      height: auto
      width 70px
      +above($breakpoints.md)
        width 70px
      +above($breakpoints.xxl)
        width 102px

  &__description
    display: none
    +above($breakpoints.sm)
      display: block
    span
      display block
      +above($breakpoints.md)
        margin: 0 0 3px 0
      +above($breakpoints.xxl)
        margin: 0 0 5px 0

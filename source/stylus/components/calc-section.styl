.calc-section
  background-image: url('../images/cooperation-bg.jpg')
  background-repeat: no-repeat
  background-position: center top
  background-size: cover

  &__inner
    padding: 50px 0
    position relative
    z-index 1
    +above($breakpoints.md)
      padding: 60px 0
    +above($breakpoints.md)
      padding: 80px 0
    +above($breakpoints.xxl)
      padding: 120px 0

  &__container
    display: flex
    align-items: center
    justify-content: center
    gap: 12px
    margin: 0 0 20px 0
    flex-direction: column
    text-align: center
    +above($breakpoints.sm)
      text-align: left
      flex-direction: row
    +above($breakpoints.md)
      margin: 0 0 30px 0
    +above($breakpoints.xxl)
      gap: 17px
      margin: 0 0 40px 0

  &__info
    background-color: $color-red-1
    border-radius: 100px
    padding: 10px 28px
    +above($breakpoints.md)
      padding: 16px 44px
    +above($breakpoints.xxl)
      padding: 23px 60px

  &__frame
    background-color: $color-white
    border-radius: 18px
    color: $color-black
    padding: 20px 14px
    +above($breakpoints.sm)
      padding: 34px 48px
      border-radius: 22px
    +above($breakpoints.md)
      border-radius: 30px
      padding: 40px 68px
    +above($breakpoints.xxl)
      border-radius: 35px
      padding: 60px 88px

  &__frame-btns
    display: flex
    justify-content: center
    gap 4px
    margin: 0 0 30px 0
    +above($breakpoints.sm)
      gap 11px
    +above($breakpoints.md)
      margin: 0 0 36px 0
    +above($breakpoints.xxl)
      margin: 0 0 48px 0
    .calc-btn
      max-width: 150px;
      height: 42px;
      width 100%
      border-radius: 100px
      border: 2px solid #878787;
      color: #878787;
      background: none
      cursor pointer
      transition: 0.3s
      +above($breakpoints.sm)
        max-width: 200px;
        height: 50px;
        width 100%
      +above($breakpoints.md)
        max-width: 300px
        height: 70px
      +above($breakpoints.xxl)
        max-width: 470px
        height: 95px
      &--active
        border: none
        background: $color-red-1
        color: $color-white

  &__frame-range
    margin: 0 0 50px 0
    +above($breakpoints.md)
      margin: 0 0 64px 0
    +above($breakpoints.xxl)
      margin: 0 0 94px 0
    .irs
      cursor pointer
      height: 14px
      border-radius: 100px;
      background: #F3F3F3
      +above($breakpoints.sm)
        height: 14px
      +above($breakpoints.md)
        height: 18px
      +above($breakpoints.xxl)
        height: 24px
      .irs-grid-pol
        display: none
      .irs-bar.irs-bar--single
        background: $color-red-1
        border: 0
        top: 0
        bottom: 0
        margin: auto
        box-shadow: none
        height: 8px
        border-radius: 7px;
        +above($breakpoints.md)
          height: 10px
      .irs-handle.single
        top: 0
        bottom: 0
        margin: auto 0
        cursor pointer
        border-radius: 100%
        background: $color-red-1
        border: none
        width: 22px;
        height: 22px;
        box-shadow: none
        +above($breakpoints.sm)
          width: 22px;
          height: 22px;
        +above($breakpoints.md)
          width: 28px;
          height: 28px;
        +above($breakpoints.xxl)
          width: 40px;
          height: 40px;
        i
          display: none
      .irs-line
        top: 0
        background: rgba(238, 238, 238, 0.2)
        border: 0
        height: 10px
        border-radius: 5px;
      .irs-grid
        bottom: -29px
        height: auto
        +above($breakpoints.sm)
          bottom: -28px
        +above($breakpoints.md)
          bottom: -36px
        +above($breakpoints.xxl)
          bottom: -44px
        .irs-grid-text
          font-size: 13px;
          line-height: 13px;
          font-weight: 400
          color: $color-black
          font-family: "Manrope-Regular"
          +above($breakpoints.sm)
            font-size: 14px;
            line-height: 14px;
          +above($breakpoints.md)
            font-size: 18px;
            line-height: 18px;
          +above($breakpoints.xxl)
            font-size: 24px;
            line-height: 24px;
          &.active
            color: $color-red-1
            font-family: "Manrope-Regular"

  &__frame-range-total
    display: flex
    flex-direction: column
    align-items: center
    margin: 0 0 13px 0
    +above($breakpoints.md)
      margin: 0 0 20px 0
    +above($breakpoints.xxl)
      margin: 0 0 30px 0
    div
      border-radius: 100px
      color: $color-black
      background-color: #F3F3F3
      padding: 3px 60px
      +above($breakpoints.xxl)
        padding: 3px 92px

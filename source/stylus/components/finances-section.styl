.finances-section
  background-image: url('../images/finances-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover

  &__inner
    position relative
    z-index 1
    padding: 42px 0 0 0
    +above($breakpoints.sm)
      padding: 60px 0 0 0
    +above($breakpoints.md)
      padding: 80px 0 0 0
    +above($breakpoints.xxl)
      padding: 120px 0 0 0

  &__title
    margin: 0 -10px
    +above($breakpoints.sm)
      margin: 0

  &__title-helper
    margin: 20px 0
    +above($breakpoints.md)
      margin: 30px 0
    +above($breakpoints.xxl)
      margin: 40px 0

  &__cards
    margin: 0 0 30px 0
    width 221px
    +above($breakpoints.sm)
      margin: 0 0 50px 0
      width unset
    +above($breakpoints.md)
      margin: 0 0 90px 0
    +above($breakpoints.xxl)
      margin: 0 0 190px 0

  &__cards-list
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content: center
      gap: 16px
    +above($breakpoints.md)
      gap: 24px
    +above($breakpoints.xxl)
      gap: 40px

  &__cards-item
    +above($breakpoints.sm)
      width auto !important

  &__card
    background-color: $color-white-2
    width: 221px;
    height: 166px;
    padding: 20px 0 0 0;
    +above($breakpoints.md)
      width 297px
      height: 200px
      padding: 26px 0 0 0
    +above($breakpoints.xxl)
      width 360px
      height: 244px
      padding: 40px 0 0 0
    br
      display: block

  &__card-icon
    margin: 0 0 12px 0
    +above($breakpoints.md)
      margin: 0 0 14px 0
    +above($breakpoints.xxl)
      margin: 0 0 20px 0
    img
      width 40px
      height: auto
      margin: 0 auto

  &__card-title
    margin: 0 0 6px 0
    +above($breakpoints.md)
      margin: 0 0 11px 0
    +above($breakpoints.xxl)
      margin: 0 0 15px 0

  &__feedback
    .feedback
      &__info
        text-align: left
        margin: 0 0 14px 0
        +above($breakpoints.md)
          margin: 0 0 20px 0
        +above($breakpoints.xxl)
          margin: 0 0 40px 0
      &__description
        margin: 0 0 18px 0
        +above($breakpoints.sm)
          margin: 0 0 10px 0
        +above($breakpoints.md)
          margin: 0 0 12px 0
        +above($breakpoints.xxl)
          margin: 0 0 20px 0
      &__title
        width 200px
        +above($breakpoints.sm)
          width unset
      &__inputs
        position: relative
        z-index 1
      &__list
        background-color: $color-black-3
        justify-content: space-between
        position relative
        z-index 1
        padding: 18px 0
        +above($breakpoints.sm)
          gap: 0
          padding: 30px 77px
        +above($breakpoints.md)
          padding: 46px 116px
        +above($breakpoints.xxl)
          padding: 60px 150px
        &:before,
        &:after
          content: ""
          position: absolute
          z-index -1
          background-color: $color-black-3
          width 100vw
          top: 0
          bottom: 0
        &:before
          left: 100%
        &:after
          right: 100%
      &__decor
        position: absolute
        z-index -1
        right: -35px
        bottom: 100%
        +above($breakpoints.sm)
          right: 120px;
        img
          height: auto
          width 152px
          +above($breakpoints.sm)
            width 192px
          +above($breakpoints.md)
            width 260px
          +above($breakpoints.xxl)
            width 416px

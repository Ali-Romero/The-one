.finances-section
  background-image: url('../images/finances-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover

  &__inner
    position relative
    z-index 1
    padding: 42px 0
    +above($breakpoints.sm)
      padding: 60px 0
    +above($breakpoints.md)
      padding: 80px 0 98px 0
    +above($breakpoints.xxl)
      padding: 120px 0 154px 0

  &__decor
    position: absolute
    z-index 1
    left: -17px;
    top: 67px;
    pointer-events: none
    +above($breakpoints.sm)
      left: 50px
      top: 30px
    +above($breakpoints.md)
      top: 66px
    +above($breakpoints.xxl)
      top: 66px
      left: 50px
    img
      height: auto
      width 106px
      +above($breakpoints.sm)
        width 136px
      +above($breakpoints.md)
        width 200px
      +above($breakpoints.xxl)
        width 245px

  &__title
    margin: 0 0 20px 0
    +above($breakpoints.md)
      margin: 0 0 30px 0
    +above($breakpoints.xxl)
      margin: 0 0 40px 0

  &__cards
    margin: 0 0 30px 0
    width 221px
    +above($breakpoints.sm)
      margin: 0 0 50px 0
      width unset
    +above($breakpoints.md)
      margin: 0 0 90px 0
    +above($breakpoints.xxl)
      margin: 0 0 190px 0

  &__cards-list
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content: center
      gap: 16px
    +above($breakpoints.md)
      gap: 24px
    +above($breakpoints.xxl)
      gap: 40px

  &__cards-item
    +above($breakpoints.sm)
      width auto !important

  &__card
    background-color: $color-white
    width: 221px;
    height: 166px;
    padding: 20px 0 0 0;
    +above($breakpoints.md)
      width 297px
      height: 200px
      padding: 26px 0 0 0
    +above($breakpoints.xxl)
      width 360px
      height: 244px
      padding: 40px 0 0 0
    br
      display: block

  &__card-icon
    margin: 0 0 12px 0
    +above($breakpoints.md)
      margin: 0 0 14px 0
    +above($breakpoints.xxl)
      margin: 0 0 20px 0
    img
      width 40px
      height: auto
      margin: 0 auto

  &__card-title
    margin: 0 0 6px 0
    +above($breakpoints.md)
      margin: 0 0 11px 0
    +above($breakpoints.xxl)
      margin: 0 0 15px 0

  &__feedback
    .feedback
      text-align: left
      &__description
        margin: 0 0 18px 0
        +above($breakpoints.sm)
          margin: 0 0 10px 0
        +above($breakpoints.md)
          margin: 0 0 12px 0
        +above($breakpoints.xxl)
          margin: 0 0 20px 0
      &__title
        margin: 0 0 10px 0
        width 160px
        padding: 12px 0 12px 12px
        background-color: #545454
        color: $color-white
        border-radius: 10px
        +above($breakpoints.sm)
          color: $color-black
          width unset
          padding: 0
          border-radius: 0px
          background-color: unset
          margin: 0 0 14px 0
        +above($breakpoints.md)
          margin: 0 0 20px 0
        +above($breakpoints.xxl)
          margin: 0 0 40px 0
      &__inputs
        position: relative
        z-index 1
      &__list
        background-color: $color-black
        border-radius: 20px
        justify-content: space-between
        padding: 28px 42px
        +above($breakpoints.sm)
          gap: 0
          padding: 45px 77px
        +above($breakpoints.md)
          padding: 56px 116px
        +above($breakpoints.xxl)
          padding: 68px 150px
      &__decor
        position: absolute
        z-index -1
        bottom: 155px;
        right: 0;
        +above($breakpoints.sm)
          bottom: 48px;
          right: 120px;
        +above($breakpoints.md)
          bottom: 38px;
        +above($breakpoints.xxl)
          bottom: 0
        img
          height: auto
          width 152px
          +above($breakpoints.sm)
            width 167px
          +above($breakpoints.md)
            width 248px
          +above($breakpoints.xxl)
            width 417px

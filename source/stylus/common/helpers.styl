.wrapper
  max-width: 320px
  margin: 0 auto
  padding: 0 6px
  +above($breakpoints.sm)
    max-width: 720px
    margin: 0 auto
    padding: 0 12px
  +above($breakpoints.md)
    max-width: 970px
    padding: 0 15px
  +above($breakpoints.xxl)
    padding: 0 20px
    max-width: 1200px

section
  font-size: 15px
  line-height: 140%
  +above($breakpoints.sm)
    font-size: 14px
  +above($breakpoints.md)
    font-size: 15px
  +above($breakpoints.xxl)
    font-size: 18px

h1,
h2,
h3,
h4
  font-family: "InterTight-SemiBold"
  font-weight: 600

.d-flex
  display: flex
.d-block
  display: block
.d-i-block
  display: inline-block
.d-inline
  display: inline
.d-none
  display: none

.color-white
  color: $color-white
.color-white-2
  color: $color-white-2
.color-white-3
  color: $color-white-3
.color-black
  color: $color-black
.color-black-2
  color: $color-black-2
.color-black-3
  color: $color-black-3
.color-red-1
  color: $color-red-1
.color-grey-1
  color: $color-grey-1


.font-i-reg
